<div class="container">
  <h3>Iniciar Sesión</h3>
  <form id="loginForm" action="/api/login" method="POST" class="user-form">
    <div class="form-group">
      <label for="email">Correo electrónico:</label>
      <input type="email" id="email" name="email" required>
    </div>
    <div class="form-group">
      <label for="password">Contraseña:</label>
      <input type="password" id="password" name="password" required>
    </div>
    <div class="form-group">
      <input id="login" type="submit" value="Iniciar Sesión">
    </div>
    <div class="form-group">
      <div class="forgot-password">
        <a href="/forgot-password">¿Olvidaste tu contraseña?</a>
      </div>
      <div class="accept-session-container">
        <label for="keepSession">Mantener sesión iniciada</label>
        <input type="checkbox" id="keepSession" name="keepSession">
      </div>
    </div>
  </form>
</div>
